datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique
  role            String
  password        String
  tickets         Ticket[]  @relation("UserTickets")
  assignedTickets Ticket[]  @relation("AssignedTickets")
  comments        Comment[]
}

model Ticket {
  id           String    @id @default(uuid())
  title        String
  description  String
  status       String
  priority     String
  authorId     String
  author       User      @relation("UserTickets", fields: [authorId], references: [id])
  assignedToId String?
  assignedTo   User?     @relation("AssignedTickets", fields: [assignedToId], references: [id])
  comments     Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  message   String
  timestamp DateTime @default(now())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
}
